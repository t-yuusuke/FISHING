<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-5 border border-secondary shadow-lg p-3 rounded" style="background-color:#D0C1C2;">
      <h4 class="mt-3 mb-4 text-center"><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table table-bordered align-items-center justify-content-center">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.full_name_kana %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
      　<div>
          <%= link_to "退会", admin_customer_path(@customer.id), method: :delete, "data-confirm" => "本当に退会させますか？", class: "btn btn-sm btn-info rounded-pill" %>
　　　　　<%= link_to "会員一覧に戻る", admin_customers_path, class: "btn btn-sm btn-info rounded-pill" %>
      　</div>
    </div>
  </div>
</div>