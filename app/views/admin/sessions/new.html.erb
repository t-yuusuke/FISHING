<div class="container mt-5 ">
  <div class="row">
    <div class="col-6 offset-3 text-center border border-secondary shadow-lg p-3 rounded"  style="background-color:#D0C1C2;">
      <h5>管理者ログイン</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group mt-5 col-8 offset-2">
    <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group mt-5 col-8 offset-2">
    <%= f.password_field :password, :placeholder => "パスワード", autofocus: true, autocomplete: "current-password", class: "form-control form-control-sm" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "ログイン", class: "mt-4 btn btn-sm btn-info col-8" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>

    </div>
  </div>
</div>