<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-5 border border-secondary shadow-lg p-3 rounded" style="background-color:#D0C1C2;">

<h3>投稿一覧</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>写真</th>
        <th>タイトル</th>
      </tr>
    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_customer_path(post.customer.id) do %>
          <%= image_tag post.customer.get_profile_image(100,100), class: "rounded-circle" %><br />
          <%= post.customer.full_name %>
          <% end %>
        </td>
        <td><%= link_to post.title, admin_post_path(post.id) %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
      </div>
    </div>
  </div>