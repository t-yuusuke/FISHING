<div class="container mt-5 ">
  <div class="row">
    <div class="col-6 offset-3 text-center border border-secondary shadow-lg p-3 rounded"  style="background-color:#D0C1C2;">
      <h5>新規登録</h5>
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group mt-4 col-8 offset-2">
        <%= f.text_field :last_name, :placeholder => "姓", autofocus: true, autocomplete: "last_name", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.text_field :first_name, :placeholder => "名", autofocus: true, autocomplete: "first_name", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.text_field :last_name_kana, :placeholder => "セイ", autofocus: true, autocomplete: "last_name_kana", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.text_field :first_name_kana, :placeholder => "カナ", autofocus: true, autocomplete: "first_name_kana", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.password_field :password, :placeholder => "パスワード（6文字以上）", autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
      <div class="form-group mt-2 col-8 offset-2">
        <%= f.password_field :password_confirmation, :placeholder => "パスワード（確認用）", autocomplete: "new-password", class: "form-control form-control-sm" %>
      </div>
      <div class="actions">
        <%= f.submit "登録する", class: "mt-4 btn btn-sm btn-secondary col-8" %>
      </div>
      <% end %>
      <p class="mt-3">既に登録済みの方</p>
      <p><%= render "public/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>