<div class="container px-5 px-sm-0">

  <div class="row">

<%= render 'public/posts/list',customer: @customer %>
<div class="col-md-8 offset-md-1">
<h3 class="mt-3">投稿の詳細</h3>
<p><%= @post.title %></p>

  <% if @post.images.attached? %>
    <% @post.images.each do |image| %>
      <%= image_tag image.variant(resize_to_limit: [300, 300]) %>
    <% end %>
  <% end %>

<p><%= @post.body %></p>

<% if @post.customer == current_customer %>
  <%= link_to "投稿を削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-sm btn-danger" %>
  <%= link_to "投稿を編集", edit_post_path, class: "btn btn-sm btn-success" %>
<% end %>
  <%= link_to "会員ページに戻る", customer_path(@customer.id), class: "btn btn-sm btn-success" %>

  </div>
  </div>
  </div>