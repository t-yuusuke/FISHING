<div class="container px-5 px-sm-0">

  <div class="row">


<%= render 'public/posts/list',customer: @customer %>
<div class="col-md-8 offset-md-1">
<h3 class="mt-3">投稿一覧</h3>
<table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
           <% @posts.each do |post| %>
          <tbody>
            <tr>
              <td><%= image_tag @customer.get_profile_image(100,100), class: "rounded-circle" %></td>
              <td><%= link_to post.title, post_path(post.id) %></td>
              <td><%= post.body %></td>
           <% end %>
            </tr>
          </tbody>
        </table>

</div>
</div>
</div>