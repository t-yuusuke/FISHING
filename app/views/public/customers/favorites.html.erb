<div class="container">
<h4>いいね一覧</h4>
  <table class="table">
  <% @favorite_posts.each do |post|%>
    <tbody>
      <tr>
        <td>
          <%= link_to customer_path(post.customer.id) do %>
          <%= image_tag post.customer.get_profile_image(100,100), class: "rounded-circle" %><br />
          <%= post.customer.full_name %>
          <% end %>
        </td>
        <td></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>
