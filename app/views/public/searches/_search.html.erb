<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-5 border border-secondary shadow-lg p-3 rounded" style="background-color:#D0C1C2;">
    <table class='table table-hover table-inverse'>
      <% if @range == "Customer" %>
      <h2 class="text-center">会員検索結果</h2>
      <thead>
        <tr>
          <th>写真</th>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% customers.each do |customer| %>
        <tr>
          <td><%= image_tag customer.get_profile_image(100,100), class: "rounded-circle" %></td>
          <td><%=link_to customer.full_name, customer_path(customer.id) %></td>
        </tr>
    <% end %>
  </tbody>
  <% else %>
  <h2>投稿検索結果</h2>
　<thead>
    <tr>
      <th>写真</th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><%= image_tag post.customer.get_profile_image(100,100), class: "rounded-circle" %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
    </div>
  </div>
</div>