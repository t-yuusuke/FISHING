<table class='table table-hover table-inverse'>

   <% if @range == "Customer" %>
   <h2>会員検索結果</h2>
   <thead>
    <tr>
      <th>写真</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image(50,50) %></td>
        <td><%=link_to customer.full_name, customer_path(customer.id) %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
  <h2>投稿検索結果</h2>
　<thead>
    <tr>
      <th>写真</th>
      <th>タイトル</th>
      <th>投稿詳細文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><%= image_tag post.customer.get_profile_image(50,50) %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>